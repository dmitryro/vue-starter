{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"  
  ],
  "include": [
    "node_modules/vue-tsx-support/enable-check.d.ts"
  ]
}
